<%= stylesheet_link_tag 'signup', :media => "all" %>


<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>Login</h1>
      <div class="box-email">
        <%= f.label :email, "Alamat Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "Password" %>
          </div>
          <div class="column-right">
            <%= link_to "Lupa password?", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "Login" %>
        <div class="legal-text">
          Dengan melanjutkan, Anda menyetujui
          <%= link_to "Persyaratan Layanan", "#" %>
          Serta
          <%= link_to "Kebijakan Privasi", "#" %>
          Lapangan Sambang-Menyambung
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember, "Tetap Login" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> Belum punya akun LSMï¼Ÿ <span>------------</span></p>
      <%= link_to "Daftar sekarang", new_user_registration_path %>
    </div>
  </div>
</div>